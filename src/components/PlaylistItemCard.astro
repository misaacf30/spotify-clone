---
import type { Playlist } from "../lib/data"

interface Props {
    playlist: Playlist
}

const { playlist } = Astro.props
const { id, cover, title, artists, color } = playlist

const artistsString = artists.join(", ") // Intl.ListFormat
---

<a
    href={`/playlist/${id}`}
    class="playlist-item transition-all duration-300 flex flex-col relative p-2 overflow-hidden items-center 
    gap-5 rounded-md hover:bg-zinc-800 shadow-lg hover:shawod-lg bg-zinc-500/30 w-44"
    transition:name=`playlist ${id} box`
>
    <picture class="aspect-square w-full h-auto flex-none">
        <img
            src={cover}
            alt={`Cover of ${title} by ${artistsString}`}
            class="object-cover w-full h-full roudned-md"
            transition:name=`playlist ${id} image`
        />
    </picture>

    <div class="flex flex-col flex-auto px-2">
        <h4 class="font-semibold text-sm" transition:name=`playlist ${playlist?.id} title`>
            {title}
        </h4>
        <span class="text-xs text-gray-400" transition:name=`playlist ${id} artists`>
            {artistsString}
        </span>
    </div>
</a>